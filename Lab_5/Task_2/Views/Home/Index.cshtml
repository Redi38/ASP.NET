@{
    ViewData["Title"] = "Трикутник";
    var sides = ViewBag.Sides as List<double> ?? new List<double>();
    var maxSide = ViewBag.MaxSide as double?;
}
<div class="container">
    <h2>Введіть сторону трикутника</h2>

    @if (sides.Count < 3)
    {
        <form method="post" action="/Home/AddSide">
            <input type="number" name="side" step="0.01" required />
            <button type="submit">Додати сторону</button>
        </form>
    }

    <h3>Введені сторони:</h3>
    <ul>
        @foreach (var side in sides)
        {
            <li>@side</li>
        }
    </ul>

    @if (maxSide.HasValue)
    {
        <h2>Максимальна сторона: @maxSide</h2>
        <form method="post" action="/Home/Reset">
            <button type="submit">Скинути</button>
        </form>
    }
</div>
