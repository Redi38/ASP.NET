@{
    ViewBag.Title = "Трикутник";
    int step = Context.Request.Query["step"].ToString() == "" ? 1 : int.Parse(Context.Request.Query["step"]);
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <h2>Введення сторін трикутника</h2>

        @if (step == 1)
        {
            <h3>Введіть сторону AB</h3>
            <form method="post" action="@Url.Action("SaveAB", "Home")">
                <input type="text" name="AB" class="form-control" inputmode="decimal" required />
                <button type="submit" class="btn btn-primary mt-2">Далі</button>
            </form>
        }
        else if (step == 2)
        {
            <h3>Введіть сторону BC</h3>
            <form method="post" action="@Url.Action("SaveBC", "Home")">
                <input type="text" name="BC" class="form-control" inputmode="decimal" required />
                <button type="submit" class="btn btn-primary mt-2">Далі</button>
            </form>
        }
        else if (step == 3)
        {
            <h3>Введіть сторону AC</h3>
            <form method="post" action="@Url.Action("SaveAC", "Home")">
                <input type="text" name="AC" class="form-control" inputmode="decimal" required />
                <button type="submit" class="btn btn-primary mt-2">Розрахувати</button>
            </form>
        }
        else if (step == 4)
        {
            <h3>Найбільша сторона трикутника:</h3>
            <p class="alert alert-info">Максимальна сторона: @ViewBag.MaxSide</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Почати спочатку</a>
        }
    </div>
</body>
</html>
