@model Task_2.Models.MessageModel
@{
    ViewData["Title"] = "Перегляд повідомлення";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5" style="max-width: 700px;">
    <div class="card shadow p-4">
        <h4 class="text-center mb-4">Повідомлення</h4>

        <p><strong>Від:</strong> @Model.From</p>
        <p><strong>Тема:</strong> @Model.Theme</p>
        <p><strong>Дата:</strong> @Model.SentAt.ToString("f")</p>

        <div class="border p-3 mt-3 bg-light rounded">
            <pre style="white-space: pre-wrap;">@Model.Text</pre>
        </div>

        <div class="text-end mt-4">
            <a href="/Home/Inbox" class="btn btn-secondary">Назад до вхідних</a>
        </div>
    </div>
</div>
