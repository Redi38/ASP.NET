@model List<Task_3.Models.MessageModel>
@{
    ViewData["Title"] = "Вхідні повідомлення";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <h3 class="mb-4 text-center">Вхідні повідомлення</h3>

    @if (!Model.Any())
    {
        <p class="text-muted text-center">Немає повідомлень.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Від</th>
                    <th>Тема</th>
                    <th>Дата</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.From</td>
                        <td>@msg.Theme</td>
                        <td>@msg.SentAt.ToString("g")</td>
                        <td>
                            <a href="/Home/ViewMessage/@msg.Id" class="btn btn-sm btn-outline-primary">Переглянути</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="/Home/Welcome" class="btn btn-secondary mt-4">Назад</a>
</div>
