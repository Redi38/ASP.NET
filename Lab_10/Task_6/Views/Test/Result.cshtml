@{
    ViewData["Title"] = "Результат тесту";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container text-center mt-5 bg-light bg-opacity-75 p-5 rounded shadow" style="max-width: 600px;">
    <h3 class="text-success mb-4">Результат тесту</h3>
    <p class="fs-5">Правильних відповідей: <strong>@ViewBag.CorrectAnswers / 10</strong></p>
    <p class="fs-5">Підсумкова оцінка: <strong>@ViewBag.Score балів</strong></p>

    <a href="/Home/Welcome" class="btn btn-secondary mt-4">На головну</a>
</div>
