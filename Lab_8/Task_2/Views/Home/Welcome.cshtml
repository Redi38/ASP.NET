@{
    ViewData["Title"] = "Ласкаво просимо";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container text-center mt-5 bg-light p-5 rounded shadow" style="max-width: 600px;">
    <h2 class="mb-3">Ви увійшли в систему!</h2>

    <div class="text-start mt-4">
        <p><strong>Ім’я користувача:</strong> @ViewBag.UserName</p>
        <p><strong>Електронна пошта:</strong> @ViewBag.Email</p>
        <p><strong>Дата народження:</strong> @(Convert.ToDateTime(ViewBag.BirthDate).ToString("dd.MM.yyyy"))</p>
    </div>

    <a class="btn btn-success mt-3" href="/">На головну</a>
</div>
