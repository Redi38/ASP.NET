@{
    ViewData["Title"] = "Обчислення кулі";
}

<link rel="stylesheet" href="~/css/site.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <h2>Обчислення параметрів кулі</h2>
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Введіть радіус:</label>
            <input type="number" step="any" name="radius" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Оберіть параметр:</label>
            <select name="calculationType" class="form-select">
                <option value="Volume">Об'єм кулі</option>
                <option value="SurfaceArea">Площа сфери</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Обчислити</button>
    </form>

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@ViewData["Error"]</div>
    }

    @if (ViewData["Result"] != null && ViewData["Radius"] != null && ViewData["CalculationType"] != null)
    {
        var radius = ViewData["Radius"]?.ToString();
        var calculationType = ViewData["CalculationType"]?.ToString();
        var result = ViewData["Result"]?.ToString();

        <div class="alert alert-success mt-3">
            <h4>Результат</h4>
            <p><b>Радіус:</b> @radius</p>
            <p><b>Обраний параметр:</b> @(calculationType == "Volume" ? "Об'єм кулі" : "Площа сфери")</p>
            <p><b>Розраховане значення:</b> @result</p>
        </div>
    }
</div>
