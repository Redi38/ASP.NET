@{
    ViewData["Title"] = "Вибір міста та транспорту";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <div class="container">
        <h3 class="text-center">Виберіть місто та транспорт</h3>
        <form asp-action="ProcessSelection" method="post">
            <div class="row">
                <!-- Вибір міста -->
                <div class="col-md-6">
                    <label class="form-label text-start d-block">Виберіть місто:</label>
                    <div class="radio-group">
                        <label>Харків <input type="radio" name="city" value="Харків" @(ViewBag.SelectedCity == "Харків" ? "checked" : "")></label>
                        <label>Київ <input type="radio" name="city" value="Київ" @(ViewBag.SelectedCity == "Київ" ? "checked" : "")></label>
                        <label class="text-end">Одеса <input type="radio" name="city" value="Одеса" @(ViewBag.SelectedCity == "Одеса" ? "checked" : "")></label>
                        <label class="text-end">Запоріжжя <input type="radio" name="city" value="Запоріжжя" @(ViewBag.SelectedCity == "Запоріжжя" ? "checked" : "")></label>
                    </div>
                </div>

                <!-- Вибір транспорту -->
                <div class="col-md-6">
                    <label class="form-label text-start d-block">Виберіть транспорт:</label>
                    <div class="radio-group">
                        <label class="text-end">Автобус <input type="radio" name="transport" value="Автобус" @(ViewBag.SelectedTransport == "Автобус" ? "checked" : "")></label>
                        <label class="text-end">Потяг <input type="radio" name="transport" value="Потяг" @(ViewBag.SelectedTransport == "Потяг" ? "checked" : "")></label>
                        <label class="text-end">Літак <input type="radio" name="transport" value="Літак" @(ViewBag.SelectedTransport == "Літак" ? "checked" : "")></label>
                        <label class="invisible">Невидимий <input type="radio" name="transport" disabled></label> <!-- Невидимий елемент -->
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary w-75">Вибрати</button>
                </div>
                <div class="col-md-6 text-center">
                    <button type="button" class="btn btn-secondary w-75" onclick="resetSelection()">Відмовитися</button>
                </div>
            </div>
        </form>

        @if (ViewBag.ShowSelection)
        {
            <div class="alert alert-success mt-3">
                <strong>Ви обрали:</strong> @ViewBag.SelectedCity, @ViewBag.SelectedTransport
            </div>
        }
    </div>

    <script>
        function resetSelection() {
            document.querySelector('input[name="city"][value="Київ"]').checked = true;
            document.querySelector('input[name="transport"][value="Літак"]').checked = true;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
