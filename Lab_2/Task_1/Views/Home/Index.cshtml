@{
    ViewData["Title"] = "Форма";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="form-container p-4 shadow">
        <form method="post">
            <div class="form-layout">
                <div class="labels">
                    <label for="name" class="form-label">Ім'я:</label>
                    <br>
                    <label for="phone" class="form-label">Телефон:</label>
                    <br>
                    <label for="email" class="form-label">Поштова скринька:</label>
                    <br>
                    <label for="birthdate" class="form-label">Дата народження:</label>
                </div>
                <div></div>
                <div class="buttons">
                    <button type="submit" class="btn btn-primary">Відіслати</button>
                    <button type="reset" class="btn btn-secondary">Скинути</button>
                </div>
                <div>
                    <input type="text" id="name" name="name" class="form-control" />
                    <br>
                    <input type="text" id="phone" name="phone" class="form-control" />
                    <br>
                    <input type="email" id="email" name="email" class="form-control" />
                    <br>
                    <input type="date" id="birthdate" name="birthdate" class="form-control" />
                </div>
            </div>
        </form>
        @if (ViewBag.Name != null && ViewBag.Email != null && ViewBag.Phone != null && ViewBag.Birthdate != null)
        {
            <h3 class="mt-4">Введені дані:</h3>
            <p>Ім'я: @ViewBag.Name</p>
            <p>Телефон: @ViewBag.Phone</p>
            <p>Email: @ViewBag.Email</p>
            <p>Дата народження: @ViewBag.Birthdate</p>
        }
    </div>
</div>