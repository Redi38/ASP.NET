@model Task_12.Models.InterestModel
@{
    ViewData["Title"] = "Вибір інтересів";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <div class="container">
        <h3>Виберіть ваші інтереси:</h3>
        <form method="post" asp-controller="Home" asp-action="Index">
            <div class="interests-group">
                <label class="interest-label label-sport">
                    Спорт
                    <input asp-for="Sport" class="checkbox-sport" type="checkbox">
                </label>
                <label class="interest-label label-travel">
                    Мандрівки
                    <input asp-for="Travel" class="checkbox-travel" type="checkbox">
                </label>
                <label class="interest-label label-crafting">
                    Майстрування
                    <input asp-for="Crafting" class="checkbox-crafting" type="checkbox">
                </label>
                <label class="interest-label label-drawing">
                    Малювання
                    <input asp-for="Drawing" class="checkbox-drawing" type="checkbox">
                </label>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn btn-primary">Вибрати</button>
                <button type="submit" formmethod="post" formaction="/Home/Reset" class="btn btn-secondary">Відмовитися</button>
            </div>
        </form>

        @if (ViewData["SelectedInterests"] != null)
        {
            <div class="alert alert-success mt-3">
                <strong>Ви обрали:</strong> @ViewData["SelectedInterests"]
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
