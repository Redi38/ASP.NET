@model Task_16.Models.CitySelectionModel

@{
    ViewData["Title"] = "Словаччина - Міста";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body>

    <div class="container">
        <h3 class="text-center">Оберіть місто Словаччини</h3>
        <form asp-action="ProcessSelection" method="post">
            <div class="row">
                <!-- ComboBox -->
                <div class="col-md-6">
                    <label for="comboBoxCities">Список, що розкривається:</label>
                    <select asp-for="ComboBoxCity" class="form-select">
                        <option value="Братислава">Братислава</option>
                        <option value="Кошице">Кошице</option>
                        <option value="Пряшів">Пряшів</option>
                        <option value="Нітра">Нітра</option>
                        <option value="Жиліна">Жиліна</option>
                        <option value="Трнава">Трнава</option>
                        <option value="Тренчин">Тренчин</option>
                        <option value="Попрад">Попрад</option>
                    </select>
                </div>

                <!-- ListBox -->
                <div class="col-md-6">
                    <label for="listBoxCities">Список, що прокручується:</label>
                    <select asp-for="ListBoxCities" class="form-select" multiple>
                        <option value="Братислава">Братислава</option>
                        <option value="Кошице">Кошице</option>
                        <option value="Пряшів">Пряшів</option>
                        <option value="Нітра">Нітра</option>
                        <option value="Жиліна">Жиліна</option>
                        <option value="Трнава">Трнава</option>
                        <option value="Тренчин">Тренчин</option>
                        <option value="Попрад">Попрад</option>
                    </select>
                </div>
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">Відіслати</button>
            </div>
        </form>

        @if (ViewData["SelectedCity"] != null)
        {
            <div class="alert alert-success mt-3">
                <strong>Ви обрали з ComboBox:</strong> @ViewData["SelectedCity"]
                <br>
                <strong>Ви обрали з ListBox:</strong> @ViewData["SelectedCities"]
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
