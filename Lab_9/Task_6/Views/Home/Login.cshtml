@model Task_6.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>Login</h3>
            <a href="/Home/Register" class="btn btn-outline-secondary">Зареєструватися</a>
        </div>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username:</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorUsername))
                {
                    <div class="text-danger mt-1">@ViewBag.ErrorUsername</div>
                }
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password:</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorPassword))
                {
                    <div class="text-danger mt-1">@ViewBag.ErrorPassword</div>
                }
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}