@model Task_6.Models.SendMessageModel
@{
    ViewData["Title"] = "Надіслати повідомлення";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<partial name="_ValidationScriptsPartial" />

<div class="container mt-5" style="max-width: 600px;">
    <div class="card p-4 shadow">
        <h4 class="mb-3 text-center">Відправка повідомлення</h4>

        @if (ViewBag.Status != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Status</div>
        }

        <form asp-action="SendMessage" method="post">
            <div class="mb-3">
                <label asp-for="To" class="form-label">Отримувач</label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Theme" class="form-label">Тема</label>
                <input asp-for="Theme" class="form-control" />
                <span asp-validation-for="Theme" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Text" class="form-label">Текст</label>
                <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Home/Welcome" class="btn btn-secondary">Назад</a>
                <button type="submit" class="btn btn-primary">Надіслати</button>
            </div>
        </form>
    </div>
</div>
